{
  "name": "chef-en-place-api",
  "version": "1.0.0",
  "description": "Kitchen management system API for Chef en Place",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --passWithNoTests",
    "deploy": "./scripts/deploy.sh",
    "vercel-build": "npm install",

    "migrate:backup": "node scripts/backupUsers.js backup",
    "migrate:dry-run": "node scripts/migrateUsers.js dry-run",
    "migrate:run": "node scripts/migrateUsers.js migrate",
    "migrate:validate": "node scripts/migrateUsers.js validate",
    "migrate:rollback": "node scripts/migrateUsers.js rollback",
    "backup:list": "node scripts/backupUsers.js list",
    "migrate:test": "node scripts/testMigration.js test",
    "migrate:test-cleanup": "node scripts/testMigration.js cleanup",
    "test:db": "node test-db-connection.js",
    "test:pending-requests": "node scripts/test-pending-requests.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.9.0",
    "sharp": "^0.34.3",
    "stripe": "^18.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "kitchen",
    "management",
    "restaurant",
    "recipes",
    "chef"
  ],
  "author": "Chef en Place Team",
  "license": "MIT",
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
